generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  EMPLOYEE
}

enum OrderStatus {
  PREPARING
  SHIPPED
  DELIVERED
  CANCELLED
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  phone     String?
  address   String?
  role      UserRole
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  // Relations
  orders  Order[]
  reviews Review[]
}

model Category {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  // Relations
  products Product[]
}

model Product {
  id          String    @id @default(uuid())
  name        String
  stock       Int
  price       Float
  images      String[]
  description String
  sortOrder   Int
  featured    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?

  // Relations
  categoryId String
  category   Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  reviews    Review[]
  orderItems OrderItem[]
}

model Review {
  id        String    @id @default(uuid())
  comment   String?
  rating    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  // Relations
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Order {
  id        String      @id @default(uuid())
  status    OrderStatus
  address   String
  total     Float
  time      DateTime
  createdAt DateTime    @default(now())
  updatedAt DateTime?

  // Relations
  userId String
  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items  OrderItem[]
}

model OrderItem {
  id        String    @id @default(uuid())
  quantity  Int
  price     Float
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  // Relations
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
}
