generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  bio       String?
  avatarURL String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tweets                Tweet[]
  likes                 Like[]
  followers             Follower[]     @relation("UserFollowers")
  following             Follower[]     @relation("UserFollowing")
  notificationsReceived Notification[] @relation("NotificationsReceived")
  notificationsSent     Notification[] @relation("NotificationsSent")
}

model Tweet {
  id        Int      @id @default(autoincrement())
  content   String
  images    String[] // array of images
  videos    String?
  hashtags  String[] // array of hashtags
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author   User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int

  likes    Like[]
  replies  Tweet[] @relation("TweetReplies")
  parent   Tweet?  @relation("TweetReplies", fields: [parentId], references: [id], onDelete: Cascade)
  parentId Int?

  notifications Notification[]
}

model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  tweet   Tweet @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  tweetId Int

  @@unique([userId, tweetId])
}

model Follower {
  createdAt  DateTime @default(now())
  follower   User     @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  followerId Int

  following   User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)
  followingId Int

  @@unique([followerId, followingId])
}

enum NotificationType {
  LIKE
  FOLLOW
  REPLY
  MENTION
}

model Notification {
  id        Int              @id @default(autoincrement())
  type      NotificationType
  message   String?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  // Relations
  recipient   User @relation("NotificationsReceived", fields: [recipientId], references: [id], onDelete: Cascade)
  recipientId Int

  actor   User? @relation("NotificationsSent", fields: [actorId], references: [id], onDelete: Cascade)
  actorId Int?

  tweet   Tweet? @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  tweetId Int?
}
