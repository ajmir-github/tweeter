generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  bio       String?
  avatarURL String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tweets                Tweet[]
  likes                 Like[]
  followers             Follower[]     @relation("UserFollowers")
  following             Follower[]     @relation("UserFollowing")
  notificationsReceived Notification[] @relation("NotificationsReceived")
  notificationsSent     Notification[] @relation("NotificationsSent")
}

model Tweet {
  id        String   @id @default(uuid())
  content   String
  images    Json // array of images
  videos    String?
  hashtags  Json // array of hashtags
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  likes    Like[]
  replies  Tweet[] @relation("TweetReplies")
  parent   Tweet?  @relation("TweetReplies", fields: [parentId], references: [id], onDelete: Cascade)
  parentId String?

  notifications Notification[]
}

model Like {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  tweet   Tweet  @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  tweetId String

  @@unique([userId, tweetId])
}

model Follower {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  follower   User   @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  followerId String

  following   User   @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)
  followingId String

  @@unique([followerId, followingId])
}

enum NotificationType {
  LIKE
  FOLLOW
  REPLY
  MENTION
}

model Notification {
  id        String           @id @default(uuid())
  type      NotificationType
  message   String?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  // Relations
  recipient   User   @relation("NotificationsReceived", fields: [recipientId], references: [id], onDelete: Cascade)
  recipientId String

  actor   User?   @relation("NotificationsSent", fields: [actorId], references: [id], onDelete: Cascade)
  actorId String?

  tweet   Tweet?  @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  tweetId String?
}
